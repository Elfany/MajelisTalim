<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#041d36"
    tools:context=".Registrasi">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="487dp"
        android:layout_height="315dp"
        android:gravity="center"
        android:src="@drawable/logo2"
        tools:layout_editor_absoluteX="-38dp"
        tools:layout_editor_absoluteY="-44dp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_button"
        android:enabled="false"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.3"
        android:text="SIGN UP"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="440dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="102dp"
        android:layout_height="22dp"
        android:background="@drawable/shape_buttontransparent"
        android:enabled="false"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.3"
        android:text="SIGN IN"
        android:textColor="#ffffff"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="558dp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/btn_login"
        app:layout_editor_absoluteX="150dp"
        app:layout_editor_absoluteY="605dp" />

    <EditText
        android:id="@+id/txt_nama"
        android:layout_width="339dp"
        android:layout_height="50dp"
        android:fontFamily="@font/acme"
        android:hint="Nama"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionDone"
        android:inputType="textEmailSubject"
        android:selectAllOnFocus="true"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="@color/cardview_light_background"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="232dp" />

    <EditText
        android:id="@+id/txt_username"
        android:layout_width="339dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_baseline_person_"
        android:fontFamily="@font/acme"
        android:hint="Email"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="@color/cardview_light_background"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="293dp" />

    <EditText
        android:id="@+id/txt_password"
        android:layout_width="339dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_baseline_lock_"
        android:fontFamily="@font/acme"
        android:hint="@string/prompt_password"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:textColor="#ECECEC"
        android:textColorHint="@color/cardview_light_background"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="356dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="SIGN UP"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="150dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acme"
        android:text="Sudah Punya Akun?"
        android:textColor="#ffffff"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="537dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
