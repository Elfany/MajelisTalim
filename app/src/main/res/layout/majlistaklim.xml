<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bg"
        android:layout_width="534dp"
        android:layout_height="274dp"
        android:src="@drawable/bg1"
        tools:layout_editor_absoluteX="-13dp"
        tools:layout_editor_absoluteY="-72dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acme"
        android:text="Data Majlis Taklim"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="76dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_data"
        android:layout_width="387dp"
        android:layout_height="586dp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="149dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo2"
        tools:layout_editor_absoluteX="-134dp"
        tools:layout_editor_absoluteY="-340dp" />

    <ImageButton
        android:id="@+id/btn_inputtaklim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_transparan"
        app:srcCompat="@drawable/ic_round_add_circle_outline_24"
        tools:layout_editor_absoluteX="277dp"
        tools:layout_editor_absoluteY="599dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
